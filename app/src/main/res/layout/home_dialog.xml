<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="380dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_280"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/shape_corner_white5"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/iv_tumb"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5" />


                <RelativeLayout
                    android:id="@+id/rl_close"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_alignParentRight="true">



                    <ImageView
                        android:id="@+id/iv_close_2"
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_7"
                        android:src="@mipmap/ic_close_dialog" />
                </RelativeLayout>
            </RelativeLayout>




            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:scrollbars="vertical"
                android:textColor="#999999"
                android:gravity="center_horizontal"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/iv_go"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="30dp"
                android:background="@drawable/shape_corner_zise"
                android:gravity="center"
                android:text="前往查看"
                android:textColor="#fff" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_no_word"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_150"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_18"

            android:src="@mipmap/bg_dialog" />


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@mipmap/close_dialog_2"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>


</RelativeLayout>
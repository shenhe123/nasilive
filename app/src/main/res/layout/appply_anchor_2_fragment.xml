<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/dp_26"
                    >

                    <View
                        android:id="@+id/v1_1"
                        android:layout_width="2dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape_corner_orange"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/v1_1"
                        android:text="请输入身份信息"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="真实姓名"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_realname"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@null"
                        android:gravity="right|center"
                        android:hint="请输入身份证姓名"
                        android:textColor="#000"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="身份证号"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_id"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@null"
                        android:gravity="right|center"
                        android:hint="请输入身份证号码"
                        android:maxLength="18"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="60dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="支付宝姓名"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_ali_account"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@null"
                        android:gravity="right|center"
                        android:hint="请输入支付宝姓名"
                        android:textColor="#000"
                        android:textSize="15sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="60dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="支付宝账号"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_ali_num"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@null"
                        android:gravity="right|center"
                        android:hint="请输入支付宝账号"
                        android:textColor="#000"
                        android:textSize="15sp" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp">

                        <View
                            android:id="@+id/v_1"
                            android:layout_width="2dp"
                            android:layout_height="16dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/shape_corner_orange"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/v_1"
                            android:text="请上传身份照片"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_front"
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/line_stroke"
                                android:src="@mipmap/zhengmian" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/iv_front"
                                android:layout_centerHorizontal="true"
                                android:text="身份证人像面"
                                android:textColor="#959595" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_back"
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/line_stroke"
                                android:src="@mipmap/fanmian" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/iv_back"
                                android:layout_centerHorizontal="true"
                                android:text="身份证国徽面"
                                android:textColor="#959595" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            >

                            <ImageView
                                android:id="@+id/iv_hand"
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/line_stroke"
                                android:src="@mipmap/shouchi" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/iv_hand"
                                android:layout_centerHorizontal="true"
                                android:text="手持身份证"
                                android:textColor="#959595" />

                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="温馨提示:请确保姓名、身份证号清晰可见，这可以帮助客服人员快速通过你的申请。" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_binded_id"
                android:layout_width="230dp"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@mipmap/bg_renzheng"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="您的账号已认证，可直接进入下一步。"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="312dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:text="提交审核"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
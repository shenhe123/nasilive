<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:layout_marginTop="@dimen/dp_10">


        <android.support.v7.widget.CardView
            android:id="@+id/cv_1"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"

            android:layout_marginLeft="@dimen/dp_15"

            app:cardCornerRadius="1.5dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@id/cv_1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="13sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_A0A0A0"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_DADADA"
                    android:textSize="12sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_below="@id/rl_top"
        android:paddingHorizontal="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_button_1"
        android:layout_width="@dimen/dp_75"
        android:layout_height="wrap_content"



        android:layout_alignParentRight="true"

        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/shape_line_gray4"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_8"
        android:paddingVertical="@dimen/dp_5"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_button_2"
        android:layout_width="@dimen/dp_75"
        android:layout_height="wrap_content"



        android:layout_toLeftOf="@id/tv_button_1"

        android:background="@drawable/shape_line_gray4"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_8"
        android:paddingVertical="@dimen/dp_5"
        android:textColor="@color/black"
        android:textSize="12sp"

        />
    </RelativeLayout>

</RelativeLayout>
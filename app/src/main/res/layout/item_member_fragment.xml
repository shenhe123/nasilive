<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_160"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/buy_youxia" />

    <TextView
        android:id="@+id/tv_time_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E7CF8B"
        android:textSize="15sp"
        android:layout_below="@id/iv_icon"
        android:gravity="center"
        />


    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#4C485A" />

        <LinearLayout

            android:id="@+id/ll_song_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="赠送 "
                android:textColor="#939393"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_song_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="666"
                android:textColor="#E7CF8B"
                android:textSize="16sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text=" 金币"
                android:textColor="#939393"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_song_coin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/dp_16"

                android:layout_marginBottom="@dimen/dp_16"
                android:text="98"
                android:textColor="#E7CF8B"
                android:textSize="16sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/dp_16"

                android:layout_marginBottom="@dimen/dp_16"
                android:text=" 元 /"
                android:textColor="#939393"
                android:textSize="16sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/dp_16"

                android:layout_marginBottom="@dimen/dp_16"
                android:text="30"
                android:textColor="#E7CF8B"
                android:textSize="16sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/dp_16"

                android:layout_marginBottom="@dimen/dp_16"
                android:text=" 天"
                android:textColor="#939393"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_pay"
            android:layout_width="@dimen/dp_113"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/button_kaitong" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_icon"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_icon_1"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/texiao" />

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center"
                android:text="开通特效"
                android:textColor="#D9D9D9"
                android:textSize="13sp" />

            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center"
                android:text="全频道广播"
                android:textColor="#939393"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_icon_2"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/mingpian" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center"
                android:text="贵族名片"
                android:textColor="#D9D9D9"
                android:textSize="13sp" />

            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center"
                android:text="尊贵身份象征"
                android:textColor="#939393"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_icon_3"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/mingpian" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon_3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center"
                android:text="连麦互动"
                android:textColor="#D9D9D9"
                android:textSize="13sp" />

            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center"
                android:text="与主播零距离亲密互动"
                android:textColor="#939393"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_1"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_icon_4"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/gift" />

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon_4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center"
                android:text="贵族礼物"
                android:textColor="#D9D9D9"
                android:textSize="13sp" />

            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center"
                android:text="贵族专属礼物"
                android:textColor="#939393"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_icon_5"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/xunzhang" />

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon_5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center"
                android:text="贵族勋章"
                android:textColor="#D9D9D9"
                android:textSize="13sp" />

            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center"
                android:text="贵族专属勋章"
                android:textColor="#939393"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_icon_6"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/huanying" />

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon_6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center"
                android:text="进场欢迎"
                android:textColor="#D9D9D9"
                android:textSize="13sp" />

            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center"
                android:text="进场信息提示"
                android:textColor="#939393"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/rl_2"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_icon_7"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/dongtai_2" />

            <TextView
                android:id="@+id/tv_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon_7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center"
                android:text="私密动态"
                android:textColor="#D9D9D9"
                android:textSize="13sp" />

            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center"
                android:text="免费查看私密动态"
                android:textColor="#939393"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_icon_8"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/changliao" />

            <TextView
                android:id="@+id/tv_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon_8"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center"
                android:text="无限畅聊"
                android:textColor="#D9D9D9"
                android:textSize="13sp" />

            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_8"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center"
                android:text="与主播无限畅聊"
                android:textColor="#939393"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_icon_9"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/jinyan" />

            <TextView
                android:id="@+id/tv_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon_9"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center"
                android:text="防禁言"
                android:textColor="#D9D9D9"
                android:textSize="13sp" />

            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_9"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center"
                android:text="无法被房管禁言"
                android:textColor="#939393"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
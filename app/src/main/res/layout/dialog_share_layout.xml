<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_corner_white2">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="分享给"
            android:textColor="#333333" />


        <LinearLayout
            android:id="@+id/ll_bottom_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/dp_15"

            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_wechat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="微信"
                    android:textSize="12sp"
                    android:textColor="#333333" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_wechat_friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_pengyouq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="朋友圈"
                    android:textSize="12sp"
                    android:textColor="#333333" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="QQ"
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:textColor="#333333" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_qqzone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/iv_4"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_qzone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="QQ空间"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:textColor="#333333" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_weibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/iv_5"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_sina" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="微博"
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:textColor="#333333" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_save"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/iv_6"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_baocun" />

                <TextView
                    android:id="@+id/tv_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="保存二维码"
                    android:textSize="12sp"
                    android:textColor="#333333" />


            </RelativeLayout>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_bottom_2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_bottom_1"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_jubao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/iv_7"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_jubao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_7"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="举报"
                    android:textSize="12sp"
                    android:textColor="#333333" />


            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/rl_fuzhi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/iv_9"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_fuzhi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_9"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="复制链接"
                    android:textSize="12sp"
                    android:textColor="#333333" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_collect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/iv_8"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_shoucang" />

                <TextView
                    android:id="@id/tv_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_8"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="收藏"
                    android:textSize="12sp"
                    android:textColor="#333333" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/rl_10"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_10"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_baocun" />

                <TextView
                    android:id="@+id/tv_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_10"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="下载"
                    android:textSize="12sp"
                    android:textColor="#333333" />

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">



            </RelativeLayout>

            <RelativeLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_weight="1">





            </RelativeLayout>


        </LinearLayout>
        <View
            android:id="@+id/v_1"
            android:layout_width="match_parent"
            android:layout_below="@id/ll_bottom_2"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="0.5dp"
            android:background="#fff5f5f5"/>

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:textSize="15sp"
            android:text="取消"
            android:gravity="center"
            android:layout_below="@id/v_1"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_other"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_bottom" />

</RelativeLayout>
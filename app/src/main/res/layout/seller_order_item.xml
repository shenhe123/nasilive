<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:paddingHorizontal="@dimen/dp_15"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_order_code"
            android:layout_gravity="center_vertical"

            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:maxLines="1"
           android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_creat_time"
            android:layout_gravity="center_vertical"

            android:layout_width="0dp"
            android:layout_weight="4"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_A2A2A2"

            />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_shop_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/ll_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_gravity="right">




        <TextView
            android:id="@+id/tv_button_1"
            android:layout_width="@dimen/dp_75"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:background="@drawable/shape_line_gray4"

            android:textSize="13sp"
            android:textColor="@color/color_222222"
            />


        <TextView
            android:id="@+id/tv_button_2"
            android:layout_width="@dimen/dp_75"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:paddingHorizontal="@dimen/dp_8"
            android:paddingVertical="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/shape_line_red"
            android:textSize="13sp"
            android:textColor="@color/color_FE2C55"
            />


    </LinearLayout>

</LinearLayout>
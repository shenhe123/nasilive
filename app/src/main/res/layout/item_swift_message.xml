<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/swift_message_bg"

        android:paddingTop="9dp"
        android:paddingEnd="@dimen/dp_13"
        android:paddingBottom="@dimen/dp_8">

        <TextView
            android:id="@+id/quick_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AccountManage"
            android:textColor="#704630"
            android:textSize="@dimen/textSize_12"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/de_message"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/de_msg_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/quick_message_tv"

            />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
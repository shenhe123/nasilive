<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_11"
    android:layout_marginBottom="@dimen/dp_11">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/color_F5F5F5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_avatar"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:src="@mipmap/moren" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/civ_avatar"
                android:gravity="center"
                android:text=""
                android:textColor="#333333"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
            <RelativeLayout
                android:id="@+id/rl_age"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/tv_name"
                android:background="@drawable/shape_corner_pink"
                android:layout_gravity="center">


                <ImageView
                    android:id="@+id/iv_sex"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_2"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/boy_2" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_toRightOf="@id/iv_sex"
                    android:text="20"

                    android:textColor="@color/white"

                    android:textSize="10sp" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/rl_age"
                android:background="@drawable/shape_corner_origan">


                <ImageView
                    android:id="@+id/iv_huangguan"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_dongtai_vip" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_toRightOf="@id/iv_huangguan"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="@color/white"
                    android:textSize="10sp" />


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textColor="#333333"
        android:textSize="15sp"
        android:layout_marginLeft="70dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="@dimen/dp_15">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#B9B9B9"
            android:textSize="12sp"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/rl_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_zan"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:background="@mipmap/ic_zan" />


            <TextView
                android:id="@+id/tv_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="14"

                android:textColor="#A2A2A2"
                android:textSize="13sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/rl_liuyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/rl_zan"
            android:orientation="horizontal"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/iv_liuyan"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:background="@mipmap/ic_message" />


            <TextView
                android:id="@+id/tv_liuyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="14"
                android:textColor="#A2A2A2"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
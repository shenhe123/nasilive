<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_corner_white_10" />

        <ImageView
            android:id="@+id/iv_vip_backround"
            android:layout_width="345dp"
            android:layout_height="155dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
             />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">


            <ImageView
                android:id="@+id/iv_manager"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:src="@drawable/ic_dialog_manager"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_report"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:src="@drawable/ic_dialog_report"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"

                android:padding="18dp"
                android:src="@drawable/ic_close_black"

                />

            <!--1-->

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
             />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/civ_avatar"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:drawablePadding="10dp"

                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                tools:text="123"
                android:textSize="15sp"
                tools:ignore="ExtraText" />




            <LinearLayout
                android:id="@+id/ll_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">




                <ImageView
                    android:id="@+id/iv_user_level"
                    android:layout_width="35dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_lv1" />


                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="30dp"
                    android:layout_height="13dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:background="@drawable/bg_gender_girl"
                    android:drawableLeft="@mipmap/ic_girl_trans"
                    android:gravity="center"
                    android:paddingHorizontal="3dp"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    tools:text="33" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_fans_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_level"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:maxLines="1"
                android:text="@string/st_fans"
                android:textColor="@color/color_A8A8A8"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_fans_count"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="@string/st_dialog_tips1"
                android:textColor="@color/color_D8A63A"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_follow"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/st_follow"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/black"/>
                <TextView
                    android:id="@+id/tv_chat"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/st_im"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/black" />
                <TextView
                    android:id="@+id/tv_home_page"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/st_home_page"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_above="@id/ll_bottom"
                android:background="@color/color_3A3A3A" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
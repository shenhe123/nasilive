<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_main_theme_color"

        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="18sp"
            android:layout_height="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/icon_back_white" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="#fff"
            android:textSize="18sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/reject_iv"
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:layout_marginTop="71dp" />

    <TextView
        android:id="@+id/reject_topic_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_27"
        android:textColor="#ff303133"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/reject_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="#ff606060"
        android:textSize="14sp" />


    <Button
        android:id="@+id/reject_button"
        android:layout_width="@dimen/dp_224"
        android:layout_height="@dimen/dp_41"
        android:layout_marginTop="46dp"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:visibility="gone" />


</LinearLayout>
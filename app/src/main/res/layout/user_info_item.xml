<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_avatar"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"

        android:src="@mipmap/moren"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48.5dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/message_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:textSize="15sp"
                android:textColor="#000"
                android:text="" />


            <ImageView
                android:layout_toRightOf="@id/tv_nickname"
                android:id="@+id/iv_anchor_level"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_13"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:src="@mipmap/anchor_1" />

            <ImageView
                android:layout_toRightOf="@id/iv_anchor_level"
                android:id="@+id/iv_user_level"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_13"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/lv1" />


            <TextView
                android:id="@+id/vip_iv"
                android:layout_toRightOf="@id/iv_user_level"
                android:layout_width="21dp"
                android:layout_height="13dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:text="20"
                android:textSize="8sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:drawableLeft="@mipmap/boy_transparent"
                android:background="@drawable/gender_bg"
                android:paddingLeft="2dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_sign"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:text="" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_follow"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@mipmap/guanzhu" />
</LinearLayout>

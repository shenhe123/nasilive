<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_avatar"
            android:layout_gravity="center_vertical"
           android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_15"
            />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/civ_avatar"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_toRightOf="@id/tv_nickname"
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:src="@mipmap/ic_arrow_gray_right"
            />


        <TextView
            android:id="@+id/tv_status"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="12sp"
            android:textColor="@color/color_FE2C55"

            />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_shop_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/ll_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/tv_over_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:textSize="11sp"
            android:textColor="@color/color_8A8A8A"
            />


        <TextView
            android:id="@+id/tv_button_1"
            android:layout_width="@dimen/dp_75"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:background="@drawable/shape_line_gray4"

            android:textSize="12sp"
            android:textColor="@color/color_222222"
            />


        <TextView
            android:id="@+id/tv_button_2"
            android:layout_width="@dimen/dp_75"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/shape_line_red"
            android:textSize="12sp"
            android:textColor="@color/color_FE2C55"
            />


    </LinearLayout>

</LinearLayout>
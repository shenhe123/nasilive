<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_10">


    <RelativeLayout
        android:id="@+id/rl_avatar"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_50"
        android:layout_centerVertical="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_avatar"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_toRightOf="@id/rl_avatar">


        <RelativeLayout
            android:id="@+id/rl_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="13sp" />


            <ImageView
                android:id="@+id/iv_vip"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_21"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_nickname" />

            <ImageView
                android:id="@+id/iv_user_level"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_vip" />

            <ImageView
                android:id="@+id/iv_guardian"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_user_level"
                android:src="@mipmap/ic_protect" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_nickname"

            android:textColor="@color/color_A2A2A2"
            android:textSize="11sp" />

    </RelativeLayout>

</RelativeLayout>
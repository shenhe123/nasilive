<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_yaoqing">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_30">

        <RelativeLayout
            android:id="@+id/rl_back_2"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">

            <ImageView

                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_16"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="邀请好友"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:text="邀请记录"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_title"
        android:layout_below="@id/rl_top"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_53"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_32"
        android:src="@mipmap/tittle" />


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_title"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_corner_white2">

        <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"

            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"

            android:background="@drawable/shape_corner_purple_10_f6f0ff"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:text="您的邀请码"
                android:textColor="@color/color_893EFE"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/tv_invite_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"

                android:textColor="@color/color_893EFE"
                android:textSize="30sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/iv_copy"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_23"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@mipmap/ic_copy" />


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ll_code"
            android:src="@mipmap/ic_tittle_join" />

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="@dimen/dp_260"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_1"
            android:src="@mipmap/ic_invite_step" />


        <TextView
            android:id="@+id/tv_invite"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@id/iv_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_70"
            android:background="@drawable/shape_corner_purple"
            android:gravity="center"
            android:text="立即邀请"
            android:textColor="#FFF"
            android:textSize="16sp" />


    </RelativeLayout>


</RelativeLayout>